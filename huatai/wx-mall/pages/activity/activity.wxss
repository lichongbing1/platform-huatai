.rule ul {
  width: 95%;
  margin: 0 auto;
  padding-left: 0;
  list-style-type: none;
}

.rule li {
  font-size: 0.8rem;
  line-height: 0.78rem;
  margin-bottom: 0.28rem;
  color: #333;
  list-style-type: none;
}

li {
  display: list-item;
  text-align: -webkit-match-parent;
}

.blank {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
