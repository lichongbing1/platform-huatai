page ,.container{
   width: 750rpx;
    height: 100%;
    overflow: hidden;
    background: #f4f4f4;
    position: relative;
}

.tab-bar{
  height: 8vh;
  display: flex;
  line-height: 8vh;
  background-color: #fff;
}
.tab-bar .tab-bar-item{
  flex: 1;
  text-align: center;
  color: #555;
  font-size: 30rpx;
}
.tab-bar .tab-bar-item.active{
  color: #FF5778;
  border-bottom: 1px solid #FF5778;
}

.list-cell-bd .btn{
  float: right;
  margin-left: 10px;
  font-size: 1em;
}

.scan-btn{
  height: 8vh;
  text-align: center;
  line-height: 8vh;
  background-color: #000;
  color: #fff;
}

.wrapper{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 500;
  background-color: rgba(0, 0, 0, .5)
}

.take-pop {
  width: 90vw;
  background-color: #fff;
  border-radius: 5px;
  top: 20%;
  left: 50%;
  margin-left: -45vw;
  position: absolute;
  z-index: 999;
  padding: 10px 0;
}

.take-pop .btn{
  width: 80%;
  margin: 20px auto;
}

.date-area{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  margin: 10px 0;
}

.date-row{
  display: flex;
  width: 100%;
  align-items: center;
  padding: 10px 20px;
}

.row-label{
  font-size: 32rpx;
}

.row-picker{
  margin-left: auto;
}

.picker-box{
  display: flex;
  align-items: center;
  padding: 3px 10px;
  width: 360rpx;
  height: 68rpx;
  border-radius: 4px;
  border: 1px solid #bfcbd9;
}

.row-picker .date-value{
  width: 80%;
}

.row-picker image{
  width: 40rpx;
  height: 40rpx;
  margin-left: auto;
}

.evaluate-area{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.evaluate-row{
  display: flex;
  padding: 10px 20px;
  width: 100%;
}

.evaluate-cell{
  flex: 1;
  height: 60rpx;
  font-size: 1.1em;
  line-height: 60rpx;
  white-space: nowrap;
}

.evaluate-cell:not(:first-child){
  text-align: center;
}

.evaluate-cell.evaluate-star0::after{
  font-size: 40rpx;
  color: #FEB54C;
  content: '★ ★ ★ ★ ★'
}
.evaluate-cell.evaluate-star1::after{
  font-size: 40rpx;
  color: #FEB54C;
  content: '★ ★ ★ ★'
}
.evaluate-cell.evaluate-star2::after{
  font-size: 40rpx;
  color: #FEB54C;
  content: '★ ★ ★'
}
.evaluate-cell.evaluate-star3::after{
  font-size: 40rpx;
  color: #FEB54C;
  content: '★ ★'
}
.evaluate-cell.evaluate-star4::after{
  font-size: 40rpx;
  color: #FEB54C;
  content: '★'
}

.search-btn{
 display: inline-block;
 width: 62px;
 color: #fff;
 padding: 5px 15px;
 border-radius: 4px;
 background-color: #13ce66; 
 margin-top: 10px;
 margin-left: 20px;
}